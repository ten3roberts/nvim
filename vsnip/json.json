{
  "basic-recipe": {
    "prefix": [
      "basic-recipe"
    ],
    "body": [
      "  \"${1:name}\": {",
      "    \"cmd\": \"${2:name}\"",
      "  }"
    ]
  },
  "debug-recipe": {
    "prefix": [
      "debug-recipe"
    ],
    "body": [
      "  \"debug-${1:name}\": {",
      "    \"cmd\": \"${2:build}\",",
      "    \"action\": [",
      "      \"qf\",",
      "      {",
      "        \"name\": \"dap\",",
      "        \"opts\": {",
      "          \"program\": \"${3:program}\"",
      "        }",
      "      }",
      "    ]",
      "  },"
    ]
  }
}
